```{r}

best_results <- 
   grid_results %>% 
   extract_workflow_set_result("normalized_linear_reg") %>% 
   select_best(metric = "rmse")

best_results

best_results_fit <- 
   grid_results %>% 
   extract_workflow("normalized_linear_reg") %>% 
   finalize_workflow(best_results) %>% 
   last_fit(split = group)

best_results_fit %>% 
   collect_predictions() %>% 
   ggplot(aes(x = ASSESSEDVALUE, y = .pred)) + 
