final_sales2016 <- final_sales %>%
    filter(SALE_YEAR == "2016")
  

  
final_sales2016 <- final_sales2016 %>%
  mutate(overassessed= if_else(RATIO > median(final_sales2016$RATIO), "yes", "no")) %>% # classification
